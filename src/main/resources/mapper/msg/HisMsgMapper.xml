<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.bin.mapper.msg.HisMsgMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.github.bin.entity.msg.HisMsg">
        <!--@Table his_msg hm -->
        <id column="id" property="id"/>
        <result column="type" property="type"/>
        <result column="msg" property="msg"/>
        <result column="role" property="role"/>
    </resultMap>

    <select id="historyMsg" resultMap="BaseResultMap">
        SELECT id, type, msg, role
        FROM his_msg
        <if test="id != null">
            WHERE id &lt; #{id}
        </if>
        order by id desc
        limit #{limit}
    </select>

    <select id="insert" resultType="long">
        INSERT INTO his_msg (type, msg, role)
        VALUES (#{type}, #{msg}, #{role})
        returning id
    </select>

    <update id="update">
        update his_msg
        set msg  = #{msg},
            role = #{role}
        where id = #{id}
    </update>

    <select id="listAll" resultMap="BaseResultMap">
        select id, type, msg, role
        from his_msg
        limit #{size} offset #{offset}
    </select>

    <select id="count" resultType="long">
        select count(*)
        from his_msg
    </select>
</mapper>
